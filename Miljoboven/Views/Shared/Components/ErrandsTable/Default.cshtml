@model ErrandTableViewModel

<!-- Message when no errands found -->
@if (!string.IsNullOrEmpty(Model.Message))
{
    <p>@Model.Message</p>
}
<!--Nedan ser man en lista på ärenden-->
<table>
    <tr>
        <th>Ärende anmält</th>
        <th>Ärendenummer</th>
        <th>Miljöbrott</th>
        <th>Status</th>
        <th>Avdelning</th>
        <th>Handläggare</th>
    </tr>

    @foreach (MyErrand errand in Model.ErrandList)
    {
        <tr>
            <td>@errand.DateOfObservation.ToShortDateString()</td>
            <td>
                <a asp-controller="@Model.Controller" asp-action="@Model.Action"
                    asp-route-id="@errand.ErrandId">@errand.RefNumber</a>
            </td>
            <td>@errand.TypeOfCrime</td>
            <td>@errand.StatusName</td>
            <td>@errand.DepartmentName</td>
            <td>@errand.EmployeeName</td>
        </tr>
    }
</table>