@model IMiljobovenRepository;

@{
    Layout = "_LoginInvestigatorLayout";
}

<h2>Ärenden</h2>
<p class="info">Du är inloggad som handläggare</p>

<form method="get" action="StartInvestigator">
    <table id="managerForm">
        <tr>
            <td class="label">Välj status:</td>
            <td>&nbsp;</td>
            <td class="label">Ärendenummer:</td>
            <td>&nbsp;</td>
        </tr>
        <tr>
            <td>
                <select name="status">
                    <option selected="">Välj alla</option>
                    @foreach (var errandStatus in Model.ErrandStatuses)
                    {
                        <option value="@errandStatus.StatusId">@errandStatus.StatusName</option>
                    }
                </select>
            </td>
            <td><input class="button" type="submit" value="Hämta lista" /></td>
            <td><input name="casenumber" /></td>
            <td><input class="button" type="submit" value="Sök" /></td>
        </tr>
    </table>
</form>

<!--Nedan ser man en lista på ärenden-->
<table>
    <tr>
        <th>Ärende anmält</th>
        <th>Ärendenummer</th>
        <th>Miljöbrott</th>
        <th>Status</th>
        <th>Avdelning</th>
        <th>Handläggare</th>
    </tr>

    @foreach (var errand in Model.Errands)
    {
        <tr>
            <td>@errand.DateOfObservation.ToShortDateString()</td>
            <td>
                <a asp-controller="Investigator" asp-action="CrimeInvestigator" asp-route-errandId="@errand.ErrandId">
                    @errand.ErrandId
                </a>
            </td>
            <td>@errand.TypeOfCrime</td>
            <td>@errand.StatusId</td>
            <td>@errand.DepartmentId</td>
            <td>@errand.EmployeeId</td>
        </tr>
    }
</table>